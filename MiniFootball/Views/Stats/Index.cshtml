@model IEnumerable<MiniFootball.Models.Stats>

@{
    ViewBag.Title = "Arcadia Mini Football Players Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="page-header">
				<h1>
					Arcadia Mini Football Players Statistics
				</h1>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>@Html.DisplayNameFor(model => model.Player.Name)</th>
						<th>@Html.DisplayNameFor(model => model.Games)</th>
						<th>@Html.DisplayNameFor(model => model.Goals)</th>
						<th>@Html.DisplayNameFor(model => model.Points)</th>
					</tr>
				</thead>
				<tbody>
					@for (var i = 0; i < Model.Count(); i++)
					{
						<tr>
							<th>
								@(i + 1)
							</th>
							<td>
								@Html.DisplayFor(modelItem => Model.ElementAt(i).Player.Name) @Html.DisplayFor(modelItem => Model.ElementAt(i).Player.Surname)
							</td>
							<td>
								@Html.DisplayFor(modelItem => Model.ElementAt(i).Games)
							</td>
							<td>
								@Html.DisplayFor(modelItem => Model.ElementAt(i).Goals)
							</td>
							<td>
								@Html.DisplayFor(modelItem => Model.ElementAt(i).Points)
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>