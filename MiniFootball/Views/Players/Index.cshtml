@model IEnumerable<MiniFootball.Models.Player>

@{
    ViewBag.Title = "Arcadia Mini Football Players";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="page-header">
				<h1>
					Arcadia Mini Football Players
				</h1>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.LastName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Name)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.OrderBy(s => s.LastName))
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.LastName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							<td>
							<td>
								<div class="btn-group btn-group-xs">
									<button class="btn btn-warning" type="button" onclick="location.href='@Url.Action("Details", "Players", new { id = item.Id })'">
										<em class="glyphicon glyphicon-list"></em> Details
									</button>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>